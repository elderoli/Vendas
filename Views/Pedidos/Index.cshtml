@model IEnumerable<Vendas.Models.Pedidos>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mesa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescricaoPedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mesa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescricaoPedido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PedidosId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PedidosId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PedidosId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
